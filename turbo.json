{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["generate", "^build"],
      "outputs": ["dist/**"]
    },
    "docs#build": {
      "inputs": [
        "../../openapi/**/openapi.bundle.json",
        "blog/**/*",
        "docs/**/*",
        "docusaurus.config.js",
        "sidebars.js",
        "package.json",
        "tsconfig.json",
        "src/**/*",
        "static/**/*"
      ],
      "outputs": ["build/**"]
    },
    "lint-staged": {},
    "lint": {
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:watch": {
      "cache": false
    },
    "generate": {},
    "//#generate": {
      "inputs": ["openapi/**/*.yaml"],
      "outputs": ["openapi/**/openapi.bundle.json"]
    },
    "@supaglue/schemas#generate": {
      "dependsOn": ["//#generate"],
      "inputs": ["../../openapi/**/*.yaml"],
      "outputs": ["gen/**"]
    }
  },
  "globalDependencies": [
    "**/.env",
    "**/.env.*local",
    "tsconfig.json",
    ".eslintrc.json",
    ".yarnrc.yml",
    ".yarnrc.build.yml"
  ]
}
