{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@supaglue/db#build": {
      "dependsOn": ["@supaglue/db#generate"]
    },
    "@supaglue/schemas#build": {
      "dependsOn": ["@supaglue/schemas#generate"]
    },
    "docs#build": {
      "dependsOn": ["//#bundle-openapi"],
      "inputs": [
        "docs/**/*",
        "src/**/*",
        "static/**/*",
        "*.config.js",
        "sidebars.js",
        "package.json",
        "../openapi/**/openapi.bundle.json"
      ],
      "outputs": ["build/**"]
    },
    "lint-staged": {},
    "lint": {
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:watch": {
      "cache": false
    },
    "generate": {},
    "//#bundle-openapi": {
      "inputs": ["openapi/**/*.yaml"],
      "outputs": ["openapi/**/openapi.bundle.json"]
    },
    "@supaglue/schemas#generate": {
      "dependsOn": ["//#bundle-openapi"],
      "inputs": ["../../openapi/**/*.yaml"],
      "outputs": ["gen/**"]
    },
    "@supaglue/db#generate": {
      "inputs": ["prisma/schema.prisma"]
    },
    "@supaglue/sdk#generate:clients": {
      "dependsOn": ["//#bundle-openapi"],
      "inputs": ["../../openapi/**/*.yaml"],
      "outputs": ["crm", "mgmt"]
    }
  },
  "globalDependencies": [
    "**/.env",
    "**/.env.*local",
    "tsconfig.json",
    ".eslintrc.json",
    ".yarnrc.yml",
    ".yarnrc.build.yml",
    "package.json"
  ]
}
