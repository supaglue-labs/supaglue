{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "docs#build": {
      "outputs": ["build/**"]
    },
    "lint-staged": {},
    "lint": {
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:watch": {
      "cache": false
    },
    "generate": {},
    "//#bundle-openapi": {
      "inputs": ["openapi/**/*.yaml"],
      "outputs": ["openapi/**/openapi.bundle.json"]
    },
    "@supaglue/schemas#generate": {
      "dependsOn": ["//#bundle-openapi"],
      "inputs": ["../../openapi/**/*.yaml"],
      "outputs": ["gen/**"]
    }
  },
  "globalDependencies": [
    "**/.env",
    "**/.env.*local",
    "tsconfig.json",
    ".eslintrc.json",
    ".yarnrc.yml",
    ".yarnrc.build.yml"
  ]
}
