{
  "name": "api",
  "version": "0.19.0",
  "private": true,
  "packageManager": "yarn@3.4.1",
  "type": "commonjs",
  "dependencies": {
    "@godaddy/terminus": "^4.11.2",
    "@sentry/integrations": "^7.64.0",
    "@sentry/node": "^7.64.0",
    "@supaglue/core": "workspace:*",
    "@supaglue/db": "workspace:*",
    "@supaglue/schemas": "workspace:*",
    "@supaglue/sync-workflows": "workspace:*",
    "@supaglue/utils": "workspace:*",
    "@temporalio/activity": "^1.8.0",
    "@temporalio/client": "^1.8.0",
    "@temporalio/workflow": "^1.8.0",
    "cors": "^2.8.5",
    "cuid": "^3.0.0",
    "express": ">=5.0.0-beta.1",
    "express-openapi-validator": "^5.0.2",
    "express-prom-bundle": "^6.6.0",
    "json-schema-traverse": "^1.0.0",
    "pino-http": "^8.3.3",
    "prom-client": "^14.2.0",
    "simple-oauth2": "^5.0.0",
    "tslib": "^2.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@hapi/boom": "^10.0.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/simple-oauth2": "^5",
    "@types/uuid": "^9.0.0",
    "dotenv": "^16.0.3",
    "ts-patch": "^2.1.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "scripts": {
    "start": "tsx watch --clear-screen=false ./index.ts",
    "build": "tsc -p tsconfig.json",
    "lint-staged": "run -T lint-staged --no-stash --quiet",
    "lint": "run -T eslint",
    "prepare": "ts-patch install -s",
    "init-temporal": "tsx ./init_scripts/init_temporal.ts",
    "tsc:watch": "tsc --noEmit --watch",
    "test:integration": "SUPAGLUE_LOG_LEVEL=debug jest --selectProjects api --group=integration"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": "tsc-files --noEmit types/express.d.ts",
    "**/*.{ts,tsx,js}": [
      "eslint",
      "prettier --write"
    ]
  }
}
