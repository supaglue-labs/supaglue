generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// next-auth tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  // hashed
  password      String
  // username
  name          String    @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model SalesforceCreds {
  id           Int      @id @default(autoincrement())
  accessToken  String   @map("access_token") @db.VarChar(255)
  refreshToken String   @map("refresh_token") @db.VarChar(255)
  instanceUrl  String   @map("instance_url") @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("salesforce_creds")
}

model SalesforceContact {
  id           Int      @id @default(autoincrement())
  email        String   @db.VarChar(255)
  customerId   String   @map("customer_id") @db.VarChar(255)
  salesforceId String?  @map("salesforce_id") @db.VarChar(255)
  title        String?  @db.VarChar(255)
  firstName    String?  @map("first_name") @db.VarChar(255)
  lastName     String?  @map("last_name") @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@unique([customerId, salesforceId])
  @@map("salesforce_contacts")
}

model SalesforceOpportunity {
  id                  Int      @id @default(autoincrement())
  customerId          String   @map("customer_id") @db.VarChar(255)
  salesforceId        String?  @map("salesforce_id") @db.VarChar(255)
  name                String?  @db.VarChar(255)
  salesforceAccountId String?  @map("salesforce_account_id")
  closeDate           DateTime @map("close_date")
  stage               String   @db.VarChar(255)
  amount              Decimal? @db.Money
  syncTimestamp       DateTime @map("sync_timestamp")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  @@unique([customerId, salesforceId])
  @@map("salesforce_opportunities")
}

model SalesforceAccount {
  id           Int      @id @default(autoincrement())
  customerId   String   @map("customer_id") @db.VarChar(255)
  salesforceId String?  @map("salesforce_id") @db.VarChar(255)
  name         String?  @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@unique([customerId, salesforceId])
  @@map("salesforce_accounts")
}

model SalesforceLead {
  id           Int      @id @default(autoincrement())
  customerId   String   @map("customer_id") @db.VarChar(255)
  salesforceId String?  @map("salesforce_id") @db.VarChar(255)
  title        String?  @db.VarChar(255)
  firstName    String?  @map("first_name") @db.VarChar(255)
  lastName     String?  @map("last_name") @db.VarChar(255)
  status       String   @db.VarChar(255)
  company      String   @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@unique([customerId, salesforceId])
  @@map("salesforce_leads")
}
