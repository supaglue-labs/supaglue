{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false
  },
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "rules": {
    "curly": 1,
    "prettier/prettier": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      }
    ],
    "no-console": "error"
  },
  "ignorePatterns": ["node_modules/", "dist/", "coverage/", "/packages/grpc/gen"]
}
