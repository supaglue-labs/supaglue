{
  "name": "@supaglue/nextjs",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/supaglue-labs/supaglue.git",
    "directory": "packages/nextjs"
  },
  "main": "./src/index.ts",
  "peerDependencies": {
    "react": "^18.2.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@tsconfig/next": "^1.0.4",
    "@types/node": "^18.11.18",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint-config-next": "^13.0.7",
    "next": "^13.1.1",
    "typescript-plugin-css-modules": "^4.1.1"
  },
  "scripts": {
    "build": "yarn run clean && yarn run -T tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "publish": "yarn dlx turbo run build --filter=@supaglue/nextjs... && yarn npm publish",
    "dev": "tsc -p tsconfig.json --watch",
    "lint-staged": "run -T lint-staged --no-stash --quiet",
    "lint": "run -T eslint"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "peerDependencies": {
      "next": "^13.1.1"
    }
  },
  "dependencies": {
    "@radix-ui/react-select": "^1.2.0",
    "@radix-ui/react-switch": "^1.0.1",
    "axios": "^1.2.2",
    "classnames": "^2.3.2",
    "swr": "^2.0.0"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": "tsc-files --noEmit src/globals.d.ts",
    "**/*.{ts,tsx,js}": [
      "eslint",
      "prettier --write"
    ]
  }
}
